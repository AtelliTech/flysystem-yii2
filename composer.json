{
    "name": "atellitech/flysystem-yii2",
    "description": "It's an adapter of file system for Yii2 that integrating with league/flysystem. But now only supports local, in memory and SFTP and will support AWS S3 or others adpater are developing ongoing.",
    "keywords": ["flysystem", "filesystem", "sftp", "s3", "yii2"],
    "license": "MIT",
    "homepage":"https://github.com/AtelliTech/flysystem-yii2",
    "authors": [
        {
            "name": "Eric Huang",
            "email": "eric.huang@atelli.ai"
        }
    ],
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "yiisoft/yii2": "^2.0",
        "league/flysystem": "^3.0",
        "league/flysystem-sftp-v3": "^3.0",
        "league/flysystem-memory": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "AtelliTech\\Yii2\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
